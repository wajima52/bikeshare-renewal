.row
  .col-md-6.col-md-offset-3
    = form_for(bicycle) do |f|
      .form-group
        = f.label :name, '名前'
        = f.text_field :name, class: 'form-control'
      .form-group
        = f.label :bicycle_type, '自転車のタイプ'
        = f.select :bicycle_type, Bicycle.bicycle_types_i18n.keys.map {|k| [Bicycle.bicycle_types_i18n[k], k]}
      .form-group
        = f.label :image, '画像'
        = f.file_field :image
      = f.submit '登録', class: 'btn btn-primary btn-block'
