%section.callaction
  .container
    .row
      .col-lg-12
        .big-cta
          .cta-text
            %h1
              = current_user.username
              さんの出品中リスト
.container
  .return_button
    - if user_signed_in?
      %table.table.table-hover
        %thead
          %tr
            %th 名前
            %th タイプ
        %tbody
          - @bicycles.each do |bicycle|
            %tr
              %td= bicycle.name
              %td= bicycle.bicycle_type
              %td
                = link_to '詳細', bicycle_path(bicycle)
    - else
      .center.jumbotron
        .text-center
          %h1 ログインして下さい
          = link_to 'Log in!', new_user_session_path, class: 'btn btn-lg btn-primary'